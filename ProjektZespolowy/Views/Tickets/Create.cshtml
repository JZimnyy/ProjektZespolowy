@model ProjektZespolowy.Models.Tickets.TicketFormModel

@{
    ViewBag.Title = "Create";
}

<h2>Kup bilet</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.PassengerId, "Pasażer", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PassengerId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PassengerId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FlightId, "Lot", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FlightId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FlightId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <ul>
                <li>Lotnisko startowe: @ViewBag.StartAirport</li>
                <li>Lotnisko docelowe: @ViewBag.FinishAirport</li>
                <li>Data odlotu: @ViewBag.DepartureDate</li>
                <li>Data przylotu: @ViewBag.ArrivalDate</li>
                <li>Linia lotnicza: @ViewBag.AirLine</li>
                <li>Cena: @ViewBag.Price</li>
            </ul>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kup" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Powrót do listy", "Index","Flights")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
