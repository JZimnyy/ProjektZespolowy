@model ProjektZespolowy.Models.Tickets.TicketViewModel

@{
    ViewBag.Title = "Szczegóły biletu";
}

<h2>Szczegóły biletu</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Lot")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Flight.AirRoute.StartAirportCode) -  @Html.DisplayFor(model => model.Flight.AirRoute.FinishAirportCode)
        </dd>

        <dt>
            @Html.DisplayName("Linia lotnicza")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Flight.AirRoute.AirLine.Name)
        </dd>

        <dt>
            @Html.DisplayName("Data odlotu: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Flight.DepartureDate)
        </dd>

        <dt>
            @Html.DisplayName("Data przylotu: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Flight.ArrivalDate)
        </dd>

        <dt>
            @Html.DisplayName("Cena: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Flight.Price) PLN
        </dd>

        <dt>
            @Html.DisplayName("Pasażer")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Passenger.FirstName) @Html.DisplayFor(model => model.Passenger.LastName)
        </dd>



    </dl>
</div>
<p>
    @Html.ActionLink("Powrót do listy", "Index")
</p>
